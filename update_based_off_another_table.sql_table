UPDATE COMMENTS COM
SET COM.PRIMARY_ID = 
(
    SELECT 
    TANK.PRIMARY_ID
     FROM (
    SELECT * FROM COMMENTS WHERE PRIMARY_ID IS NULL AND TANK_ID IS NOT NULL)A1
    LEFT JOIN TANKS TANK ON (TANK.TANK_ID = A1.TANK_ID)
    WHERE TANK.PRIMARY_ID IS NOT NULL
    AND A1.COMMENTS_ID = COM.COMMENTS_ID
)
WHERE COM.PRIMARY_ID IS NULL AND COM.TANK_ID IS NOT NULL
